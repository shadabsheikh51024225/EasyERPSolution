<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Final.UserActivites.Coupons.CouponsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/coupons_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bar_back"
        android:elevation="10dp"
        android:tooltipText="Coupons"
        app:titleTextColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbar_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:onClick="finish"
                android:src="@drawable/back_arrow_three"
                tools:ignore="TouchTargetSizeCheck"></ImageView>

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="Coupons  "
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="normal|bold"></TextView>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/coupons_recycler_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView></LinearLayout>

</LinearLayout>