<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/bottom_nav_root_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BottomNavigationNew.BottomNavigationNewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/temp_user_profile"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_new_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Hello John Smith.."
                android:textColor="@color/Secondary_color"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView_see_more_new_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="View profile>"
                android:textColor="@color/Primary_color"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/me_recyclerview_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/list_background"
        android:dividerHeight="2dp"
         />
</LinearLayout>