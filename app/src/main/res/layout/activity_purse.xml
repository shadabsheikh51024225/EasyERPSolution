<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.UserActivites.Coupons.PurseActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/coupons_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bar_back"
        android:elevation="10dp"
        android:tooltipText="Coupons"
        app:titleTextColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbar_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:onClick="finish"
                android:src="@drawable/back_arrow_three"
                tools:ignore="TouchTargetSizeCheck"></ImageView>

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="Wallet"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="normal|bold"></TextView>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bar_back"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="$10.58"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Amount available"
            android:textColor="@color/list_background" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_add_more"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/curved_buttons"
            android:clickable="true"
            android:text="Add Quantity"
            android:textColor="@color/white"
            ></androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyler_list_purse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:divider="@color/Tertiary_color"
        android:dividerHeight="1dp" />


</LinearLayout>