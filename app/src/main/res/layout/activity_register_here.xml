<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_here_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Final.Auth.LogInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="204dp"
        android:layout_height="186dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/easy_logo_three" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="Register Here.."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Enter all details"
        android:textColor="@color/Tertiary_color"
        android:textColorHint="@color/Tertiary_color" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        app:errorEnabled="true"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextUserName"
            android:layout_width="377dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/curved_edit_text"
            android:drawableLeft="@drawable/og_in_user_name_icon_two"
            android:drawablePadding="3dp"
            android:elevation="1dp"
            android:ems="10"
            android:hint="  Username"
            android:inputType="textEmailAddress"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:textColor="@color/Secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="377dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:hint=" email"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_edit_text"
            android:drawableLeft="@drawable/log_in_email_icon_two"
            android:drawablePadding="3dp"
            android:elevation="1dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="@color/Secondary_color"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeErrorColor="@android:color/transparent"

        app:errorEnabled="true"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="377dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:background="@drawable/curved_edit_text"
            android:drawableLeft="@drawable/log_in_password_icon_two"
            android:drawablePadding="3dp"
            android:elevation="1dp"
            android:ems="10"
            android:hint="  Password"
            android:inputType="textPassword"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:textColor="@color/Secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextConfirmPassword"
            android:layout_width="377dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_edit_text"
            android:drawableLeft="@drawable/log_in_password_icon_two"
            android:drawablePadding="3dp"
            android:elevation="1dp"
            android:ems="10"
            android:hint="  Confirm Password"
            android:inputType="textPassword"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:textColor="@color/Secondary_color" />
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:id="@+id/register_here"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/curved_button_primary"
        android:elevation="5dp"
        android:text="Register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Don you already have an account? "
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView_log_in_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login here?"
            android:textColor="@color/Primary_color"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>